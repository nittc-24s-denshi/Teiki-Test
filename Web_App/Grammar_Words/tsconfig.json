{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "lib": ["ES2018", "DOM"],
    "outDir": "./",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": true
  },
  "files": [
    "app.ts"
  ]
} 