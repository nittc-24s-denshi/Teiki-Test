{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2015",
    "lib": ["ES2018", "DOM"],
    "outDir": "./Web_App",
    "rootDir": "./Web_App",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "noEmitOnError": true
  },
  "include": [
    "app.ts"
  ],
  "exclude": [
    "node_modules",
    "app.js"
  ]
} 